{
  "multipart": [
  	
    { "when": { "OR": [
    	{ "facing": "north" },
		{ "south": true }
    	]},
      "apply": { "model": "prehistoricnature:block/bacterial_crust", "x": 90 }
    },
    
    { "when": { "OR": [
    	{ "facing": "east" },
		{ "west": true }
    	]},
      "apply": { "model": "prehistoricnature:block/bacterial_crust", "x": 90, "y": 90 }
    },
    
    { "when": { "OR": [
    	{ "facing": "south" },
		{ "north": true }
    	]},
      "apply": { "model": "prehistoricnature:block/bacterial_crust", "x": 90, "y": 180 }
    },

    { "when": { "OR": [
    	{ "facing": "west" },
		{ "east": true }
    	]},
      "apply": { "model": "prehistoricnature:block/bacterial_crust", "x": 90, "y": 270 }
    },

    { "when": { "OR": [
    	{ "facing": "up" },
		{ "down": true }
    	]},
      "apply": { "model": "prehistoricnature:block/bacterial_crust" }
    },
    
    { "when": { "OR": [
    	{ "facing": "down" },
		{ "up": true }
    	]},
      "apply": { "model": "prehistoricnature:block/bacterial_crust", "x": 180 }
    }
    
  ]
}